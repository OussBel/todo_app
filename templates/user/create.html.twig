{% extends 'base.html.twig' %}

{% block header_title %}<h1>Créer un utilisateur</h1>{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    <div class="row container">
        {{ form_start(form, {'action' : path('user_create')}) }}
        <div class="form-group">
            {{ form_label(form.username, "Nom d'utilisateur", {'attr': {'class' : 'form-label'}}) }}
            {{ form_widget(form.username, {'attr': {'class' : 'form-control'}}) }}
            {% if form_errors(form.username) %}
                <div class="alert alert-danger error-message">{{ form_errors(form.username) }}</div>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form_label(form.password.first, "Mot de passe", {'attr': {'class' : 'form-label'}}) }}
            {{ form_widget(form.password.first, {'attr': {'class' : 'form-control'}}) }}
            {% if form_errors(form.password.first) %}
                <div class="alert alert-danger error-message">{{ form_errors(form.password.first) }}</div>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form_label(form.password.second, "Tapez le mot de passe à nouveau", {'attr': {'class' : 'form-label'}}) }}
            {{ form_widget(form.password.second, {'attr': {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.email, "Adresse email", {'attr': {'class' : 'form-label'}}) }}
            {{ form_widget(form.email, {'attr': {'class' : 'form-control'}}) }}
            {% if form_errors(form.email) %}
            <div class="alert alert-danger error-message">{{ form_errors(form.email) }}</div>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form_label(form.roles, "Rôles", {'attr': {'class' : 'form-label'}}) }}
            {{ form_widget(form.roles, {'attr': {'class' : 'form-control'}}) }}
        </div>
        <button type="submit" class="btn btn-success pull-right">Ajouter</button>
        {{ form_end(form) }}
    </div>
{% endblock %}